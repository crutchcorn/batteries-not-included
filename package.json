{
	"name": "batteries-not-included",
	"version": "0.0.3",
	"description": "A utilities library with a batteries-not-included philosophy",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest",
		"format": "eslint --fix ./src/**/*.ts",
		"lint": "eslint ./src/**/*.ts",
		"build": "run-s build:clean build:tsc build:copy",
		"build:clean": "rimraf ./dist",
		"build:tsc": "tsc",
		"build:copy": "run-p build:copy:**",
		"build:copy:package": "copyfiles -u 1 ./dist-files/package.json ./dist",
		"build:copy:mdroot": "copyfiles ./*.md ./dist",
		"build:copy:mddist": "copyfiles -u 1 ./src/**/*.md ./dist",
		"release": "standard-version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/unicorn-utterances/batteries-not-included.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/unicorn-utterances/batteries-not-included/issues"
	},
	"homepage": "https://github.com/unicorn-utterances/batteries-not-included#readme",
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@babel/plugin-proposal-optional-chaining": "^7.7.5",
		"@babel/preset-env": "^7.7.7",
		"@babel/preset-react": "^7.7.4",
		"@babel/preset-typescript": "^7.7.7",
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@testing-library/jest-dom": "^5.1.1",
		"@testing-library/react": "^9.4.1",
		"@testing-library/react-hooks": "^3.2.1",
		"@types/jest": "^25.1.3",
		"@typescript-eslint/eslint-plugin": "^2.21.0",
		"@typescript-eslint/parser": "^2.21.0",
		"babel-jest": "^25.1.0",
		"copyfiles": "^2.2.0",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.18.3",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"jest-watch-typeahead": "^0.4.2",
		"lint-staged": "^10.0.8",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-test-renderer": "^16.12.0",
		"rimraf": "^3.0.2",
		"standard-version": "^7.1.0",
		"ts-jest": "^25.2.1",
		"typescript": "^3.8.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"npm run format"
		]
	}
}
