{
	"name": "batteries-not-included",
	"version": "0.1.1",
	"description": "A utilities library with a batteries-not-included philosophy",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest",
		"format": "eslint --fix ./src/**/*.ts",
		"lint": "eslint ./src/**/*.ts",
		"build": "run-s build:clean build:tsc build:copy",
		"build:clean": "rimraf ./dist",
		"build:tsc": "tsc",
		"build:copy": "run-p build:copy:**",
		"build:copy:package": "copyfiles -u 1 ./dist-files/package.json ./dist",
		"build:copy:mdroot": "copyfiles ./*.md ./dist",
		"build:copy:mddist": "copyfiles -u 1 ./src/**/*.md ./dist",
		"release": "standard-version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/unicorn-utterances/batteries-not-included.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/unicorn-utterances/batteries-not-included/issues"
	},
	"homepage": "https://github.com/unicorn-utterances/batteries-not-included#readme",
	"devDependencies": {
		"@babel/core": "^7.17.10",
		"@babel/plugin-proposal-optional-chaining": "^7.16.7",
		"@babel/preset-env": "^7.17.10",
		"@babel/preset-react": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@commitlint/cli": "^16.2.4",
		"@commitlint/config-conventional": "^16.2.4",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.2.0",
		"@types/jest": "^27.5.1",
		"@typescript-eslint/eslint-plugin": "^5.23.0",
		"@typescript-eslint/parser": "^5.23.0",
		"babel-jest": "^28.1.0",
		"copyfiles": "^2.4.1",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.5.0",
		"husky": "^4.2.3",
		"jest": "^28.1.0",
		"jest-environment-jsdom": "^28.1.0",
		"jest-watch-typeahead": "^1.1.0",
		"lint-staged": "^12.4.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-test-renderer": "^18.1.0",
		"rimraf": "^3.0.2",
		"standard-version": "^9.3.2",
		"ts-jest": "^28.0.2",
		"typescript": "^4.6.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"npm run format"
		]
	}
}
